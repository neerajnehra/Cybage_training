package com.cybage.service;


import java.sql.SQLException;
import com.cybage.exception.EmployeeException;
import com.cybage.model.Employee;

 

public interface EmployeeService {
    public abstract void add(String name, String address, int comp, String type) throws EmployeeException,SQLException,Exception;
    public abstract void displayAll() throws EmployeeException, SQLException, Exception;
    public abstract void displayWithId(int id) throws EmployeeException, SQLException, Exception;
    public abstract void delete(int id,Employee e, String type) throws EmployeeException, SQLException, Exception;
    public abstract void update(int id) throws EmployeeException, SQLException, Exception;
    //update
    //delete
    //CRUD --> create , read, update, delete
}